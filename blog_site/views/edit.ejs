<!-- 
  HTML FORM TO EDIT POST
  
  This HTML form is used to edit a post. 
  It includes fields for post title, post content, and image upload.
  These fields would be populated by the post data stored in Mongo DB
  -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Edit Post</title>
	</head>
	<body>
		<h1>EDIT POST</h1>
		<form
			action="/profile/post/<%= post._id %>/edit"
			method="post"
			enctype="multipart/form-data">
			<div class="postTitle">
				<label for="postTitle">PostTitle</label>
				<Input
					type="text"
					id="postTitle"
					name="postTitle"
					class="input"
					value="<%= post.postTitle %>"
					required />
			</div>
			<br />
			<div class="postContent">
				<label for="postContent">PostContent</label>
				<textarea
					name="postContent"
					id="postContent"
					cols="50"
					rows="10"
					required>
                    <%= post.postContent %>
                </textarea
				>
			</div>
			<div class="upload-image">
				<label for="file-input">Upload Image</label>
				<input type="file" name="image" id="file-input" />
			</div>
			<br />
			<div class="button">
				<button type="submit">Edit</button>
			</div>
		</form>
	</body>
</html>
